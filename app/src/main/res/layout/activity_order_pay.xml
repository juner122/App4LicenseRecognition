<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/head_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tv_order_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号：  XGX100010"
                android:textColor="#ff000000"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#D9D9D9" />

            <TextView
                android:id="@+id/tv_car_no"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号码："
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView

                android:id="@+id/tv_make_date"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="下单时间："
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_expect_date"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计完成："
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="订单金额："
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优 惠 券："
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_coupon_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选择 0 张"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_pick_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/icon_add"
                    android:drawablePadding="8dp"
                    android:gravity="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="请选择优惠卡券"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠折扣："
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_discount"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_f"
                    android:digits="0123456789."
                    android:gravity="center"
                    android:hint="输入折扣"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="减免金额："
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <EditText

                    android:id="@+id/et_discount2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_f"
                    android:gravity="center"
                    android:hint="输入金额"
                    android:inputType="number"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择收款方式"
                android:textColor="#ff000000"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_pay1"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="微信收款"
                    android:textColor="#ff000000"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/cb_weixin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/check_bok_background_a"
                    android:button="@null"
                    android:checked="true" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#D9D9D9"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_pay2"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="嗨卡收款"
                    android:textColor="#ff000000"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/icon_enter"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical|end"
                    android:text=""
                    android:textColor="#666"
                    android:textSize="13sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_pay3"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="线下收款"
                    android:textColor="#ff000000"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_pick_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/icon_xiala"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|end"
                    android:text="收款方式"
                    android:textColor="#FF666666"
                    android:textSize="13sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="8dp"

                android:background="#D9D9D9" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_card_num"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_code_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="卡号："
                    android:textColor="#ff000000"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_car_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_f"
                    android:hint="输入内容"
                    android:inputType="number|textEmailAddress"
                    android:padding="8dp"
                    android:textColor="#FF666666"
                    android:textSize="13sp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="结算金额：￥"
            android:textColor="#ff000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_enter_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_c"
            android:gravity="center"
            android:text="确认收款"
            android:textColor="#ff000000"
            android:textSize="14sp" />


    </LinearLayout>
</LinearLayout>