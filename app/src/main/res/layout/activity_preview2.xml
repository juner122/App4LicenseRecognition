<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/head_view" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">


            <com.camerakit.CameraKitView
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:adjustViewBounds="true" />


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/background_carme"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="请将车牌号置于扫描区域内"
                android:textColor="#fff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_Flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/icon_flash_off" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="车牌号"
                android:textColor="#ff000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/lock_type"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_background_b"
                android:stateListAnimator="@null"
                android:text="新能源"
                android:textColor="#fff"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:paddingRight="5dp"
                android:visibility="visible" />
        </LinearLayout>

        <com.parkingwang.keyboard.view.InputView
            android:id="@+id/input_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            app:pwkInputTextSize="21sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_b"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:stateListAnimator="@null"
                android:text="一键识别"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="*请核对信息，如有错漏请手动修改"
            android:textColor="#ff999999"
            android:textSize="10sp" />

        <Button
            android:id="@+id/but_next"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background_c"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>