<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/add_download_info_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_download_dialog_height"
        android:background="@color/add_download_info_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/iv_video_cover"
                android:layout_width="127dp"
                android:layout_height="98dp"
                android:paddingBottom="16dp"
                android:scaleType="centerCrop"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/tv_add_download_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxWidth="125dp"
                android:singleLine="true"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@id/iv_video_cover"
                android:textColor="@android:color/white"
                android:textSize="@dimen/alivc_download_title_font" />

            <TextView
                android:id="@+id/tv_add_download_view_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_add_download_view_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/iv_video_cover"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/iv_download_dialog_close"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:padding="12dp"
                android:src="@drawable/alivc_download_dialog_close" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="38dp"
            android:text="@string/choose_download_sharpness"
            android:textColor="@android:color/white"
            android:textSize="@dimen/alivc_download_font_size" />

        <!--<com.aliyun.vodplayerview.utils.WrapCheckGroup-->
            <!--android:id="@+id/quality_list"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->

            <!--android:layout_marginTop="25dp" />-->
        <RadioGroup
            android:id="@+id/rg_quality_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

        </RadioGroup>

        <Button
            android:id="@+id/download"
            style="@style/btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="34dp"
            android:text="@string/add_to_download" />
    </LinearLayout>

</ScrollView>