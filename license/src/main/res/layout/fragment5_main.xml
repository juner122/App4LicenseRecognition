<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/appColor"
        android:gravity="center"
        android:text="我的"
        android:textColor="#000"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:padding="12dp">


        <ImageView
            android:id="@+id/iv_user_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_user_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="岗顶店—新干线汽车服务连锁"
                android:textColor="#ff000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码：13888888888"
                android:textColor="#ff898989"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_my_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_check_selector"
        android:drawableLeft="@mipmap/icon_my_balance"
        android:drawablePadding="29dp"
        android:gravity="center_vertical"
        android:padding="18dp"
        android:text="我的余额"
        android:textColor="#ff000000"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#D9D9D9" />

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:drawableLeft="@mipmap/icon_renzheng"
        android:drawablePadding="29dp"
        android:gravity="center_vertical"
        android:padding="18dp"
        android:text="我的认证"
        android:textColor="#ff000000"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:drawableLeft="@mipmap/icon_about"
        android:drawablePadding="29dp"
        android:gravity="center_vertical"
        android:padding="18dp"
        android:text="关于安安养车"
        android:textColor="#ff000000"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#D9D9D9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:drawableLeft="@mipmap/icon_updata"
        android:drawablePadding="29dp"
        android:gravity="center_vertical"
        android:padding="18dp"
        android:text="检查更新"
        android:textColor="#ff000000"
        android:textSize="14sp" />
</LinearLayout>