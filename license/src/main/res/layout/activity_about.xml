<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">


    <include layout="@layout/head_view" />


    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


    <TextView
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是一款汽车维修保养的软件，很多用户都在关注，通过这个软件可以在全国各地旗下的汽修店进行汽车维修和保养等等服务，包括各种洗车，车检等等！软件介绍新干线汽车服务连锁创立于1994年，属广州市新干线实业有限公司旗下品牌，专注于汽车保养、汽车维修、汽车美容、钣金喷漆、尾气治理、车险理赔、汽车用品销售等一站式服务。目前，新干线旗下拥有数十家的汽车服务连锁店。软件功能【汽车美容】洗车、打蜡、室内干洗、战铠镀"
        android:textColor="#ff666666"
        android:textSize="12sp" />
</LinearLayout>